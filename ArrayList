import java.util.ArrayList;
public class EjArraylist {

    
    public static void main(String[] args) {
     //declaro el ArrayListe
     ArrayList<String> clientes;
     //Instacio el ArrayListe
     clientes = new ArrayList<>();
     //Agrego elementos 
     clientes.add("Gonzalo");
     clientes.add("Maria");
     clientes.add("Carlos");
     clientes.add("Juan");
     //recorro el Arraylist
     for (int i = 0; i < clientes.size(); i++){
         System.out.println("-"+clientes.get(i));
     }
     //elimino el primer elemento del ArrayList
     clientes.remove(0);
     for (int i = 0; i < clientes.size(); i++){
      System.out.println("+"+clientes.get(i));
     }
             }
    
}
